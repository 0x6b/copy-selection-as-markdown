{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:core build:firefox build:chromium",
    "build:core": "npm run build --workspace copy-selection-as-markdown-core",
    "build:firefox": "npm run build --workspace copy-selection-as-markdown-firefox",
    "build:chromium": "npm run build --workspace copy-selection-as-markdown-chromium",
    "test": "run-s test:core",
    "test:core": "npm run test --workspace copy-selection-as-markdown-core",
    "generate": "run-s generate:firefox",
    "generate:firefox": "npm run generate --workspace copy-selection-as-markdown-firefox",
    "format": "npm run format --workspaces",
    "watch": "run-p watch:core watch:firefox",
    "watch:core": "npm run watch --workspace copy-selection-as-markdown-core",
    "watch:firefox": "npm run watch --workspace copy-selection-as-markdown-firefox"
  },
  "devDependencies": {
    "@types/firefox-webext-browser": "^82.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "web-ext": "^6.2.0",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2"
  },
  "version": "0.21.0",
  "engines": {
    "node": "16.x"
  }
}
