{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace copy-selection-as-markdown-core --workspace copy-selection-as-markdown-firefox --workspace copy-selection-as-markdown-chromium\n",
    "test": "npm test --workspaces",
    "generate": "npm run generate --workspace copy-selection-as-markdown-firefox",
    "format": "prettier --write 'packages/**/src/**/{*.js,*.json}'",
    "watch": "run-p watch:*",
    "watch:core": "npm run watch --workspace copy-selection-as-markdown-core",
    "watch:firefox": "npm run watch --workspace copy-selection-as-markdown-firefox",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "@types/firefox-webext-browser": "^82.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "web-ext": "^6.2.0",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2"
  },
  "version": "0.21.0",
  "engines": {
    "node": "16.x"
  }
}
