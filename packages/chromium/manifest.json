{
  "manifest_version": 2,
  "name": "Copy Selection as Markdown",
  "version": "0.21.0",
  "description": "Copy title, URL, and selection as Markdown",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "dist/index.js",
      "dist/browser-polyfill.min.js"
    ]
  },
  "options_ui": {
    "page": "dist/settings.html"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Copy as Markdown"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Copy as Markdown"
    }
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "clipboardWrite",
    "contextMenus",
    "tabs",
    "storage"
  ]
}

