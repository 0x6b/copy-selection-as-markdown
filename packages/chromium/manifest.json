{
  "manifest_version": 3,
  "name": "Copy Selection as Markdown",
  "version": "0.22.0",
  "description": "Copy title, URL, and selection as Markdown",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "index.js"
  },
  "options_ui": {
    "page": "settings.html"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Copy as Markdown"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Copy as Markdown"
    }
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "contextMenus",
    "storage",
    "scripting"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ]
}

